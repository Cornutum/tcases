<?xml version="1.0"?>
<System name="AllOf">
  <Has name="server" value="/"/>
  <Has name="version" value="0.0.0"/>
  <Function name="POST_allOf">
    <Has name="operation" value="POST"/>
    <Has name="path" value="/allOf"/>
    <Input type="request">
      <VarSet name="Body">
        <Var name="Defined">
          <Value name="Yes" property="Content"/>
          <Value name="No" failure="true"/>
        </Var>
        <Var name="Media-Type" when="Content">
          <Value name="application-json" property="application-json">
            <Has name="mediaType" value="application/json"/>
          </Value>
          <Value name="Other" failure="true">
            <Has name="excluded" value="&apos;application/json&apos;"/>
          </Value>
        </Var>
        <VarSet name="application-json" when="application-json">
          <Var name="Type">
            <Value name="array" property="application-jsonValue"/>
            <Value name="null" failure="true"/>
            <Value name="Not array" failure="true"/>
          </Var>
          <VarSet name="Items" when="application-jsonValue">
            <Var name="Size">
              <Value name="0"/>
              <Value name="1" property="application-jsonItems"/>
              <Value name="&gt; 1" property="application-jsonItems, application-jsonItemsMany"/>
            </Var>
            <VarSet name="Contains" when="application-jsonItems">
              <Var name="Type">
                <Value name="integer" property="application-jsonItemsValue"/>
                <Value name="null" failure="true"/>
                <Value name="Not integer" failure="true"/>
              </Var>
              <Var name="Value" when="application-jsonItemsValue">
                <Value name="&lt; 0"/>
                <Value name="0"/>
                <Value name="&gt; 0"/>
              </Var>
            </VarSet>
            <Var name="Unique" when="application-jsonItemsMany">
              <Value name="Yes"/>
              <Value name="No"/>
            </Var>
          </VarSet>
        </VarSet>
      </VarSet>
    </Input>
  </Function>
</System>
