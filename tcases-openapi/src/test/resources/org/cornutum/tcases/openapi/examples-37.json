{
    "openapi": "3.0.0",
    "info": {
        "title": "examples",
        "version": "0.0.0"
    },
    "paths": {
        "/examples": {
            "post": {
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "number",
                                "example": 2.71828
                            },
                            "examples": {
                                "Positive": { "value": 0.1234},
                                "Zero": { "value": 0.0},
                                "Negative": { "value": -0.9876}
                            }
                        }
                    }  
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/success"
                    },
                    "default": {
                        "$ref": "#/components/responses/failure"
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "success": {
                "description": "Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            },
            "failure": {
                "description": "Error",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}
