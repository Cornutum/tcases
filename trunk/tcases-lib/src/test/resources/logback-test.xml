<configuration> 

  <appender name="FILE" class="ch.qos.logback.core.FileAppender"> 
    <file>${project.build.directory}/logs/tcases.log</file> 
    <encoder> 
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{32} - %msg%n</pattern> 
    </encoder> 
  </appender> 
  
  <root level="debug"> 
    <appender-ref ref="FILE" /> 
  </root> 

</configuration>
