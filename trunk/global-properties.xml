<?xml version="1.0"?>
<!-- Version: $Revision$ $Date$ -->

<project name="globalProperties" default="none" basedir=".">

  <!-- Utility tasks -->
  <import file="${root.dir}/tool-tasks.xml"/>

  <!-- Root URL -->
  <pathconvert property="root.dir.std" targetos="unix">
    <path location="${root.dir}"/>
  </pathconvert>

  <!-- Release tag -->
  <property name="release.id" value="0.0.1"/>
  <property name="release.tag" value="tcases-${release.id}"/>
  
  <!-- Source directories -->
  <property name="src.dir" location="${root.dir}/src"/>
  <property name="test.src.dir" location="${root.dir}/test"/>
  <property name="lib.dir" location="${root.dir}/lib"/>
  <property name="bin.dir" location="${root.dir}/bin"/>
  <property name="docs.dir" location="${root.dir}/docs"/>
  <property name="resources.dir" location="${root.dir}/resources"/>

  <!-- Build directories -->
  <property name="build.dir" location="${root.dir}/build"/>
  <property name="class.dir" location="${build.dir}/class"/>
  <property name="distrib.dir" location="${build.dir}/distrib"/>
  <property name="release.dir" location="${distrib.dir}/${release.tag}"/>

  <property name="javadoc.dir" location="${build.dir}/javadoc"/>

  <property name="test.build.dir" location="${build.dir}/test"/>
  <property name="test.class.dir" location="${test.build.dir}/class"/>
  <property name="test.reports.dir" location="${test.build.dir}/reports"/>
  <property name="test.javadoc.dir" location="${test.build.dir}/javadoc"/>

  <!-- Tool properties -->
  <property name="tools.dir" location="${root.dir}/tools"/>
  <property name="tools.test.lib" location="${tools.dir}/test/lib"/>
  <property name="integration.dir" location="${tools.dir}/integration"/>
  <property name="integration.ant.lib" location="${integration.dir}/lib/apache-ant-1.8.2"/>

  <!-- Test document properties -->
  <property name="test.failed.file" location="${test.build.dir}/test-failed"/>

  <!-- Java runtime properties -->
  <property name="java.assert" value="true"/>

  <!-- Java compiler properties -->
  <property name="javac.debug" value="true"/>
  <property name="javac.deprecation" value="true"/>
  <property name="javac.lint" value="-Xlint:all,-path"/>

  <!-- Common classpaths -->
  <path id="javac.classpath">
    <pathelement location="${class.dir}"/>
    <fileset dir="${lib.dir}">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <path id="javac.test.classpath">
    <path refid="javac.classpath"/>
    <pathelement location="${test.class.dir}"/>
    <fileset dir="${tools.test.lib}">
      <include name="*.jar"/>
    </fileset>
  </path>

  <target name="none">
    <fail>No default target defined.</fail>
  </target>

</project>
