<?xml version="1.0"?>
<xs:schema 
   xmlns:xs="http://www.w3.org/2001/XMLSchema"
   targetNamespace="http://www.cornutum.org/tcases"
   xmlns="http://www.cornutum.org/tcases"
   >
  <!-- 
  //////////////////////////////////////////////////////////////////////////////
  // 
  //                    Copyright 2012, Cornutum Project
  //                             www.cornutum.org
  //
  //////////////////////////////////////////////////////////////////////////////
  -->
  <!-- Defines the schema for a system test case specification document -->
  <!-- $Revision$, $Date$ -->

  <!-- Annotations -->
  <xs:complexType name="annotationType">
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="value" type="xs:string" use="required"/>
  </xs:complexType>

  <!-- System functions -->
  <xs:element name="TestCases">
    <xs:complexType>
      <xs:sequence maxOccurs="unbounded">

        <xs:element name="Function">
          <xs:complexType>
            <xs:sequence maxOccurs="unbounded">

              <xs:element name="TestCase">
                <xs:complexType>

                  <xs:element name="Has" minOccurs="0" maxOccurs="unbounded" type="annotationType"/>

                  <xs:sequence maxOccurs="unbounded">

                    <xs:element name="Input">
                      <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">

                          <xs:element name="Var">
                            <xs:complexType>
                              <xs:element name="Has" minOccurs="0" maxOccurs="unbounded" type="annotationType"/>
                              <xs:attribute name="name" type="xs:string" use="required"/>
                              <xs:attribute name="value" type="xs:string" use="required"/>
                              <xs:attribute name="failure" type="xs:boolean"/>
                            </xs:complexType>
                          </xs:element>

                        </xs:sequence>

                        <xs:attribute name="type" type="xs:string" default="arg"/>
                      </xs:complexType>
                    </xs:element>

                  </xs:sequence>

                  <xs:attribute name="id" type="xs:nonNegativeInteger" use="required"/>
                  <xs:attribute name="failure" type="xs:boolean"/>
                </xs:complexType>
              </xs:element>

            </xs:sequence>

            <xs:attribute name="name" type="xs:string" use="required"/>
          </xs:complexType>
        </xs:element>

      </xs:sequence>

      <xs:attribute name="system" type="xs:string" use="required"/>
    </xs:complexType>
  </xs:element>

</xs:schema>
